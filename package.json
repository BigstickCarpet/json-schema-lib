{
  "name": "json-schema-lib",
  "version": "0.0.1",
  "description": "Resolves JSON Schema $ref pointers, even to external files and URLs",
  "keywords": [
    "json",
    "schema",
    "reference",
    "pointer",
    "jsonschema",
    "json-schema",
    "json-reference",
    "json-pointer",
    "$ref",
    "resolve",
    "dereference",
    "bundle",
    "validate"
  ],
  "author": {
    "name": "James Messinger",
    "url": "http://jamesmessinger.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/BigstickCarpet/json-schema-lib",
  "repository": {
    "type": "git",
    "url": "https://github.com/BigstickCarpet/json-schema-lib.git"
  },
  "main": "lib/index.js",
  "browser": "dist/json-schema-lib.js",
  "files": [
    "dist/json-schema-lib.js",
    "dist/json-schema-lib.js.map",
    "dist/json-schema-lib.min.js",
    "dist/json-schema-lib.min.js.map",
    "lib"
  ],
  "scripts": {
    "lint": "eslint lib test --fix",
    "build": "simplifyify lib/browser.js --outfile dist/json-schema-lib.js --standalone \\JsonSchema --bundle --debug --minify",
    "test": "npm run mocha && npm run karma && npm run lint",
    "cover": "istanbul cover _mocha --dir coverage/node && npm run build -- --test && npm run karma -- --cover",
    "mocha": "mocha",
    "karma": "karma start --single-run",
    "upgrade": "npm-check -u",
    "bump": "bump --prompt --grep dist/* --tag --push --all",
    "release": "npm run upgrade && npm run build && npm test && npm run bump && npm publish"
  },
  "devDependencies": {
    "chai": "^4.0.2",
    "codacy-coverage": "^2.0.0",
    "coveralls": "^2.11.9",
    "eslint": "^3.13.1",
    "eslint-config-modular": "^4.0.0",
    "istanbul": "^0.4.5",
    "karma": "^1.4.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-cli": "^1.0.1",
    "karma-coverage": "^1.1.1",
    "karma-firefox-launcher": "^1.0.0",
    "karma-host-environment": "^1.0.1",
    "karma-ie-launcher": "^1.0.0",
    "karma-mocha": "^1.2.0",
    "karma-safari-launcher": "^1.0.0",
    "karma-sauce-launcher": "^1.1.0",
    "karma-verbose-reporter": "0.0.6",
    "mocha": "^3.2.0",
    "npm-check": "^5.4.0",
    "simplifyify": "^3.2.1",
    "version-bump-prompt": "^3.0.1"
  },
  "dependencies": {
    "call-me-maybe": "^1.0.1",
    "karma-chai": "^0.1.0",
    "ono": "^3.0.0"
  }
}